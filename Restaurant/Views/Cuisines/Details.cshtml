@model Restaurant.Models.Cuisine
@using Restaurant.Models

<div class="content">
    <h2>Details</h2>
    <h3>Name: @Model.Name</h3>
    <hr />
    @if (@Model.JoinEntities.Count == 0)
    {
        <p>This cuisine does not contain any diners</p>
    }
    else
    {
        <h4>Diners that serve this cuisine:</h4>
        <ul>
            @foreach (CuisineDiner join in Model.JoinEntities)
            {
                <li>@join.Diner.Name</li>
            }
        </ul>
    }
    <br />

    @Html.ActionLink("Add a diner to this cuisine", "AddDiner", new { id = Model.CuisineId }, new { @class = "btn btn-green" }) |
    @Html.ActionLink("Edit cuisine", "Edit", new { id = Model.CuisineId }, new { @class = "btn btn-yellow" }) |
    @Html.ActionLink("Delete cuisine", "Delete", new { id = Model.CuisineId }, new { @class = "btn btn-red" }) |
    @Html.ActionLink("Back To List", "Index", "Cuisine", null, new { @class = "btn btn-blue" })
</div>