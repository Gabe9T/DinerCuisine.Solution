@using Restaurant.Models;

<div class="content">
    <h1>Cuisines</h1>

    @if (@Model.Count == 0)
    {
        <h3>No cuisines have been added yet</h3>
    }

    <div class="columns">
        @foreach (Cuisine cuisine in Model)
        {
            @Html.ActionLink($"{cuisine.Name}", "Details", "Cuisines", new { id = cuisine.CuisineId }, new { @class = "card" })
        }
    </div>

    <div class="button-control">
        @Html.ActionLink("add new cuisine", "Create", "Cuisines", null, new { @class = "btn btn-green " })
        @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue " })
    </div>

</div>