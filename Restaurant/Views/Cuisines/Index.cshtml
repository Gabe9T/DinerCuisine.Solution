@using Restaurant.Models;

@if (@Model.Count == 0)
{
    <h3>No cuisines have been added yet</h3>
}

<ul>
    @foreach (Cuisine cuisine in Model)
    {
        <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
    }
</ul>

@Html.ActionLink("add new cuisine", "Create", "Cuisines", null, new { @class = "btn btn-success " })
@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-primary " })