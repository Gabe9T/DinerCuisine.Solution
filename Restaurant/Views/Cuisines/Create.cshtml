@{
    ViewData["Title"] = "Create Cuisine";
    Layout = "_Layout";
}
@model Restaurant.Models.Cuisine

<h4>Create new cuisine</h4>

@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-red", @style = "font-weight: 600;" })
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
        <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
        <br />
        <input type="submit" value="Add cuisine" class="btn btn-green " />
}
@Html.ActionLink("Show all cuisines", "Index", "Cuisines", null, new { @class = "btn btn-blue " })