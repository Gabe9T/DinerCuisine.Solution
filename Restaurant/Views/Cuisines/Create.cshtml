@model Restaurant.Models.Cuisine

<h4>Create new cuisine</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
    <br />
    <br />
    <input type="submit" value="Add cuisine" class="btn btn-success " />
}
@Html.ActionLink("Show all cuisines", "Index", "Cuisines", null, new { @class = "btn btn-primary " })