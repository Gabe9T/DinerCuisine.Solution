@{
    ViewData["Title"] = "Create Diner";
    Layout = "_Layout";
}

@model Restaurant.Models.Diner

<h4>Add a new diner</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
        <br />
    @Html.TextBoxFor(model => model.Name, new { placeholder = "Name" })
        <br />
    @Html.LabelFor(model => model.Specialty)
        <br />
    @Html.TextBoxFor(model => model.Specialty, new { placeholder = "Specialty" })
        <br />

        <input type="submit" value="Add diner" class="btn btn-green" />
}
@Html.ActionLink("Show Diners", "Index", "Diners", null, new { @class = "btn btn-blue " })