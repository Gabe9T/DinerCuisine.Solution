<div class="content">
    <h1>Diners</h1>

    @using Restaurant.Models;
    <hr />
    @if (@Model.Count == 0)
    {
        <h3>No diners have been added yet</h3>
    }
</div>
<div class="columns">
    @foreach (Diner diner in Model)
    {

        @Html.ActionLink($"{diner.Name}", "Details", "Diners", new { id = diner.DinerId }, new { @class = "card" })

    }
</div>
<div class="button-control">
    @Html.ActionLink("Add Diner", "Create", "Diners", null, new { @class = "btn btn-green " })
    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-blue " })
</div>